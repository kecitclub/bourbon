<% layout('../layouts/boilerplate') -%>
<style>
           

        h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: var(--primary-color);
            position: relative;
            display: inline-block;
        }

        .header p{
            font-size: 1.3rem;
            font-weight: 500;
        }

        h1::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 60%;
            height: 3px;
            background: var(--primary-color);
            animation: expandLine 1s ease forwards;
        }

        @keyframes expandLine {
            from {
                width: 0;
            }

            to {
                width: 60%;
            }
        }

        .form-container {
            background: var(--form-bg);
            padding: 3rem;
            border-radius: 20px;
            max-width: 800px;
            margin: 0 auto;
            animation: fadeIn 0.5s ease;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            color: black;
            font-weight: 500;
        }

        input,
        textarea {
            width: 100%;
            padding: 0.8rem;
            border: 2px solid transparent;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        input:focus,
        textarea:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(188, 70, 69, 0.1);
        }

        .submit-btn {
            background: gray;
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            width: 100%;
            transition: all 0.3s ease;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(188, 70, 69, 0.3);
        }

        footer {
            background: #f8f8f8;
            padding: 4rem 5%;
            margin-top: 4rem;
            border-top: 1px solid #eee;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 3rem;
        }

        .footer-logo {
            width: 180px;
            margin-bottom: 1rem;
        }

        .contact-info h3 {
            font-size: 1.2rem;
            margin-bottom: 1rem;
            color: var(--primary-color);
            font-weight: 600;
        }

        .contact-info p {
            color: #666;
            margin-bottom: 0.5rem;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 768px) {
          

            h1 {
                font-size: 2.2rem;
            }

            .container {
                padding: 2rem 5%;
            }

            .form-container {
                padding: 1.5rem;
            }

            .footer-content {
                text-align: center;
                gap: 2rem;
            }

            .footer-logo {
                margin: 0 auto 1rem auto;
            }
        }
</style>
<body>

    <div class="container">
        <div class="header">
            <h1>Project Upload Request</h1>
            <p>Enter the details of project</p>
        </div>

        <div class="form-container">
            <form method="post" action="/listing" class="needs-validation">
                <div class="form-group">
                    <label>Project_Name:</label>
                    <input name="listing[title]" type="text" placeholder="title">                
                </div>

                <div class="form-group">
                    <label>Location:</label>
                    <input name="listing[location]"type="text" placeholder="Enter location here">
                </div>
                <div class="form-group">
                    <label>Location:</label>
                    <input name="listing[description]"type="text" placeholder="Enter location here">
                </div>
                <div class="form-group">
                    <label>Location:</label>
                    <input name="listing[country]"type="text" placeholder="Enter location here">
                </div>
                <button type="submit" class="submit-btn">ADD</button>
            </form>
        </div>
    </div>

    <footer>
        <div class="footer-content">
            <div>
                <img src="/Logo.png" alt="Hero Hub Logo" class="footer-logo">
            </div>
            <div class="contact-info">
                <h3>CONTACT US:</h3>
                <p>9898989898</p>
            </div>
            <div class="contact-info">
                <h3>NEPAL</h3>
                <p>herohub@gmail.com</p>
                <p>kathmandu,Nepal</p>
            </div>
        </div>
    </footer>
</body>
