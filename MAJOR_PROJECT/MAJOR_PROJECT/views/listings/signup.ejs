<% layout('../layouts/boilerplate') -%>
<style>
    .container {
        width: 100%;
        max-width: 400px;
        background: white;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        animation: fadeIn 0.5s ease-out;
    }
    
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
    
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
 
    
    
    .logo {
        width: 32px;
        height: 32px;
    }
    
    .title {
        font-size: 1.5rem;
        font-weight: 600;
    }
    
    .form-group {
        margin-bottom: 1rem;
    }
    
    label {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }
    
    input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid rgb(229, 231, 235);
        border-radius: 0.375rem;
        font-size: 0.875rem;
        transition: border-color 0.15s ease;
    }
    
    input:focus {
        outline: none;
        border-color: rgb(59, 130, 246);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
    
    .forgot-password {
        display: block;
        text-align: right;
        color: rgb(59, 130, 246);
        text-decoration: none;
        font-size: 0.875rem;
        margin-bottom: 1rem;
        transition: color 0.15s ease;
    }
    
    .forgot-password:hover {
        color: rgb(29, 78, 216);
        text-decoration: underline;
    }
    
    .sign-in-btn {
        width: 100%;
        padding: 0.75rem;
        background-color: rgb(239, 68, 68);
        color: white;
        border: none;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.15s ease;
    }
    
    .sign-in-btn:hover {
        background-color: rgb(220, 38, 38);
    }
    
    .divider {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
    }
    
    .divider::before,
    .divider::after {
        content: "";
        flex: 1;
        border-top: 1px solid rgb(229, 231, 235);
    }
    
    .divider-text {
        padding: 0 1rem;
        color: rgb(107, 114, 128);
        font-size: 0.875rem;
    }
    
    .social-btn {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        border: 1px solid rgb(229, 231, 235);
        border-radius: 0.375rem;
        background: white;
        cursor: pointer;
        transition: background-color 0.15s ease;
    }
    
    .social-btn:hover {
        background-color: rgb(249, 250, 251);
    }
    
    .social-icon {
        width: 20px;
        height: 20px;
    }
    
    .signup-text {
        text-align: center;
        font-size: 0.875rem;
        color: rgb(107, 114, 128);
        margin-top: 1.5rem;
    }
    
    .signup-link {
        color: rgb(59, 130, 246);
        text-decoration: none;
        transition: color 0.15s ease;
    }
    
    .signup-link:hover {
        color: rgb(29, 78, 216);
        text-decoration: underline;
    }
    
    @media (max-width: 480px) {
        .container {
            padding: 1.5rem;
        }
    }
    
    </style>
<body>

    <div class="container">
        <div class="header">
            <img src="Logo.png" alt="HeroHub Logo" class="logo">
            <h1 class="title">HeroHub</h1>
        </div>

        <form action="/signup" method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" id="username" placeholder="Username" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" id="email" placeholder="Example@email.com" required>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="At least 8 characters" required>
            </div>

            <a href="#" class="forgot-password">Forgot Password?</a>

            <button type="submit" class="sign-in-btn">Sign in</button>
        </form>

        <div class="divider">
            <span class="divider-text">Or</span>
        </div>

        <button class="social-btn">
            <img src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24'%3E%3Cpath fill='%234285F4' d='M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z'/%3E%3Cpath fill='%2334A853' d='M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z'/%3E%3Cpath fill='%23FBBC05' d='M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z'/%3E%3Cpath fill='%23EA4335' d='M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z'/%3E%3C/svg%3E"
                alt="Google icon" class="social-icon">
            Sign in with Google
        </button>

        <button class="social-btn">
            <img src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24'%3E%3Cpath fill='%231877F2' d='M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z'/%3E%3C/svg%3E"
                alt="Facebook icon" class="social-icon">
            Sign in with Facebook
        </button>

        <p class="signup-text">
            Don't you have an account? <a href="#" class="signup-link">Sign up</a>
        </p>
    </div>

</body>