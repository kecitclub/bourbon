/* Stats section */
.stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    padding: 4rem;
    text-align: center;
}

.stat-card {
    background-color: #e5d6d6;
    padding: 2rem;
    border-radius: 10px;
    transition: transform 0.3s ease;
}

.stat-card:hover {
    transform: translateY(-10px);
}

.stat-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
}

.stat-number {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
}

/* Team section */
.team {
    padding: 4rem;
    text-align: center;
}

.team h2 {
    margin-bottom: 3rem;
    font-size: 2rem;
}

.team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    max-width: 1200px;
    margin: 0 auto;
}

.team-member {
    text-align: center;
}

.team-member img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    margin-bottom: 1rem;
    transition: transform 0.3s ease;
    object-fit: cover;
}

.team-member img:hover {
    transform: scale(1.1);
}

.team-member h3 {
    margin-bottom: 0.5rem;
}

.team-member p {
    color: #666;
}
/* Make sure the body and html elements take up full height */
html, body {
    height: 100%;
    margin: 0;
    padding: 0;
}

footer {
