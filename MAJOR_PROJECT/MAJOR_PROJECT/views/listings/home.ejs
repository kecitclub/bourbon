<script>
 document.addEventListener("DOMContentLoaded", () => {
  let statsAnimated = false; // Flag to ensure the animation runs only once

  const updateCount = (stat) => {
    const target = +stat.textContent.replace("+", ""); // Get target value
    stat.textContent = "0"; // Initialize the number at 0

    const animate = () => {
      const current = +stat.textContent.replace("+", ""); // Current value
      const increment = Math.ceil(target / 50); // Increment value for animation

      if (current < target) {
        stat.textContent = `${Math.min(current + increment, target)}+`; // Update value
        stat.classList.add("shake"); // Add the shake effect
        setTimeout(() => {
          stat.classList.remove("shake"); // Remove shake effect after animation
        }, 500); // Duration of the shake (matches the CSS animation duration)
        setTimeout(animate, 10); // Animation speed
      } else {
        stat.textContent = `${target}+`; // Final value
      }
    };

    animate();
  };

  // Create an Intersection Observer to trigger the stats animation when the section is visible
  const observer = new IntersectionObserver(
    (entries) => {
      const statsSection = entries[0];
      if (statsSection.isIntersecting && !statsAnimated) {
        statsAnimated = true; // Prevent re-triggering the animation
        const statNumbers = document.querySelectorAll(".stat-number");
        statNumbers.forEach(updateCount); // Start the counters
      }
    },
    { threshold: 0.5 } // Trigger when 50% of the section is visible
  );

  const statsSection = document.querySelector(".stats");
  if (statsSection) {
    observer.observe(statsSection); // Observe the stats section
  }
});

</script>

